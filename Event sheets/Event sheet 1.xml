    <name>Event sheet 1</name>
    <events>
        <comment>Always make the player look at the mouse.</comment>
        <event-block sid="382192780984373">
            <conditions>
                <condition id="-1" name="Every tick" sid="234979432330438" type="System" />
            </conditions>
            <actions>
                <action id="-22" name="Set angle toward position" sid="243625611993228" type="Player">
                    <param id="0" name="X">Mouse.X(&quot;Game&quot;)</param>
                    <param id="1" name="Y">Mouse.Y(&quot;Game&quot;)</param>
                </action>
            </actions>
        </event-block>
        <comment>Shoot 10 times a second while holding the left mouse button down.  Adjust the bullet angle by a random amount (-4 to +4 degrees) to add some inaccuracy to the firing.</comment>
        <event-block sid="981199837625263">
            <conditions>
                <condition id="2" name="Mouse button is down" sid="282651047445877" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                </condition>
                <condition id="-6" name="Every X seconds" sid="242542408174731" type="System">
                    <param id="0" name="Interval (seconds)">0.1</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Spawn another object" sid="959386377958628" type="Player">
                    <param id="0" name="Object">Bullet</param>
                    <param id="1" name="Layer">&quot;Game&quot;</param>
                    <param id="2" name="Image point">&quot;ShootPoint&quot;</param>
                </action>
                <action id="-18" name="Rotate clockwise" sid="399187923818191" type="Bullet">
                    <param id="0" name="Degrees">random(-4, 4)</param>
                </action>
            </actions>
        </event-block>
        <comment>If a bullet hits an enemy, subtract 10 from its health.  When an enemy runs out of health, destroy it.</comment>
        <event-block sid="883549631758242">
            <conditions>
                <condition id="0" name="On collision with another object" sid="979651658383540" type="Bullet">
                    <param id="0" name="Object">Enemy</param>
                </condition>
            </conditions>
            <actions>
                <action id="-12" name="Subtract from" sid="305058253261062" type="Enemy">
                    <param id="0" name="Instance variable">Health</param>
                    <param id="1" name="Value">10</param>
                </action>
                <action id="-9" name="Destroy" sid="509618738224539" type="Bullet" />
            </actions>
        </event-block>
        <event-block sid="266729999924782">
            <conditions>
                <condition id="-7" name="Compare instance variable" sid="320794558755250" type="Enemy">
                    <param id="0" name="Instance variable">Health</param>
                    <param id="1" name="Comparison">3</param>
                    <param id="2" name="Value">0</param>
                </condition>
            </conditions>
            <actions>
                <action id="-9" name="Destroy" sid="273613439619789" type="Enemy" />
            </actions>
        </event-block>
